<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.example.RegistrationFormController">
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100" prefWidth="100">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200" prefWidth="200">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Doctor Registration" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Label>



    <!-- Add Name Label -->
    <Label text="Last Name : " GridPane.columnIndex="0" GridPane.rowIndex="1">
    </Label>
    <!-- Add Last Name Text Field -->
    <TextField fx:id="nameField" prefHeight="29.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />


    <!-- Add First name Label -->
    <Label text="First Name :" GridPane.columnIndex="0" GridPane.rowIndex="2">
    </Label>



    <!-- Add Gender Label -->
    <Label text="Gender :" GridPane.rowIndex="5">
      <GridPane.margin>
         <Insets bottom="11.0" />
      </GridPane.margin></Label>


    <!-- Add Submit Button -->
    <Button fx:id="submitButton" contentDisplay="BOTTOM" defaultButton="true" onAction="#handleSubmitButtonAction" prefHeight="40" prefWidth="100" text="Submit" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="-10.0" top="60.0" />
        </GridPane.margin>
    </Button>
   <TextField fx:id="nameField1" layoutX="160.0" layoutY="127.0" prefHeight="29.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <Label layoutX="116.0" layoutY="221.0" text="Birth Date :" GridPane.rowIndex="6" />
   <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="6" />
   <HBox prefHeight="28.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
      <children>
         <RadioButton mnemonicParsing="false" text="MALE" />
         <RadioButton mnemonicParsing="false" text="FEMALE">
            <HBox.margin>
               <Insets left="55.0" />
            </HBox.margin>
         </RadioButton>
      </children>
   </HBox>
   <Label layoutX="91.0" layoutY="267.0" text="Username :" GridPane.rowIndex="7">
      <GridPane.margin>
         <Insets bottom="100.0" />
      </GridPane.margin>
   </Label>
   <PasswordField prefHeight="29.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
      <GridPane.margin>
         <Insets bottom="25.0" />
      </GridPane.margin>
   </PasswordField>
   <TextField fx:id="nameField11" layoutX="160.0" layoutY="166.0" prefHeight="29.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
      <GridPane.margin>
         <Insets bottom="100.0" />
      </GridPane.margin>
   </TextField>
   <Label layoutX="90.0" layoutY="304.0" text="password :" GridPane.rowIndex="7">
      <GridPane.margin>
         <Insets bottom="25.0" />
      </GridPane.margin>
   </Label>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
